<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/item_topic"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/bg_recycler"
  >

  <RelativeLayout
    style="@style/common_padding"
    android:id="@+id/linearLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/avatar"
      android:layout_width="32dp"
      android:layout_height="32dp"
      tools:ignore="ContentDescription"/>

    <TextView
      android:id="@+id/name"
      android:layout_marginStart="8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/avatar"
      android:textColor="@color/color_333333"
      android:textSize="@dimen/text_dimens_15sp"/>

    <TextView
      android:id="@+id/time"
      android:layout_marginStart="8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/name"
      android:layout_toRightOf="@+id/avatar"
      android:textColor="@color/color_secondary_999999"
      android:textSize="@dimen/text_dimens_12sp"/>

    <TextView
      android:id="@+id/topic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:textColor="@color/color_secondary_999999"
      android:textSize="@dimen/text_dimens_12sp"
      tools:text="android"/>

    <TextView
      android:id="@+id/pin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/topic"
      android:background="@drawable/shape_topic_top_bg"
      android:text="置顶"
      android:textColor="#c8c8ce"
      />
  </RelativeLayout>

  <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:maxLines="2"
    android:textColor="@color/color_333333"
    android:textSize="@dimen/text_dimens_17sp"
    />
</RelativeLayout>
